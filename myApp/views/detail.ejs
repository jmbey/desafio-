<%- include('partials/head') %>

    <body>
    <%- include('partials/header') %>

    <div class="card">
        <h5 class="card-header"> <%= Movie.title %></h5>
        <div class="card-body">
          <h6 class="card-title">Rating: <%= Movie.rating %></h6>
          <p class="card-text">Awards: <%= Movie.awards %></p>
          <p class="card-text">Length: <%= Movie.length %></p>
          <p class="card-text">Release Date: <%= Movie.release_date %></p>
          <p class="card-text">Genre: <%= Movie.genre.name %></p>

          <% if (loggedUser.admin == 1) { %>
          <a href="/movies/edit/<%= Movie.id %>" class="btn btn-primary">Edit</a>
          <% } %> 

          <% if (loggedUser.admin == 1) { %>
            <form action="/movies/delete/<%= Movie.id %>" method="POST">
               <button type="submit" class="btn btn-primary">Delete</button>
            </form>
            <% } %> 


        </div>
      </div>

    </body>
